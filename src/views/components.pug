body
    template#daldalVideo
        style.
            #body {
                display: flex;
                justify-content: center;
                position: relative;
                height: 200px;
            }
            #body > div {
                position: absolute;
                text-shadow: 0 1px 1px #000;
            }
            #thumbnail {
                width: 100%;
                height: 100%;
                border-radius: 10px;
                background-size: cover !important;
            }
            #title {
                bottom: 0;
                width: 100%;
                padding: 8px 0;
                text-align: center;
                background: url(https://daldal.so/media/images/dark-banner.png) 0 0/100% 100%;
            }
            #channel {
                top: 4px;
                left: 4px;
                width: 100%;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }
                #profilePic {
                    max-width: 1.5em;
                    max-height: 1.5em;
                    border-radius: 50%;
                    vertical-align: middle;
                }
        #body
            #thumbnail
            #title
            #channel
                img#profilePic
                | &nbsp;
                span#author