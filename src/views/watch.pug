                text-shadow: 0 1px 1px #000;
            }
            #thumbnail {
                width: 170px;
                height: 170px;
                border-radius: 10px;
                background-size: cover !important;
            }
            #title {
                bottom: 0;
                width: 100%;
                padding: 8px 0;
                text-align: center;
                background: url(https://daldal.so/media/images/dark-banner.png) 0 0/100% 100%;
            }
            #channel {
                top: 4px;
                left: 4px;
                width: 100%;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }
                #profilePic {
                    width: 1.5em;
                    height: 1.5em;
                    border-radius: 50%;
                    vertical-align: middle;
                }
            @media (max-width: 1100px) {
                #body, #thumbnail {
                    width: 100%;
                    height: 100%;
                }
            }
            
        #body
            #thumbnail
            #title
            #channel
                img#profilePic
                | &nbsp;
                span#author
            
    -
        function korNumFormatter(num, digits) {
            const lookup = [
              { value: 1, symbol: "" },
              { value: 1e3, symbol: "천" },
              { value: 1e4, symbol: "만" },
              { value: 1e8, symbol: "억" },
              { value: 1e12, symbol: "조" },
              { value: 1e15, symbol: "경" },
              { value: 1e20, symbol: "자" }
            ];
            const rx = /\.0+$|(\.[0-9]*[1-9])0+$/;
            var item = lookup.slice().reverse().find(function(item) {
              return num >= item.value;
            });
            return item ? (num / item.value).toFixed(digits).replace(rx, "$1") + item.symbol : "0";
        }

