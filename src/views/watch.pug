    -
        function korNumFormatter(num, digits) {
            const lookup = [
              { value: 1, symbol: "" },
              { value: 1e3, symbol: "천" },
              { value: 1e4, symbol: "만" },
              { value: 1e8, symbol: "억" },
              { value: 1e12, symbol: "조" },
              { value: 1e15, symbol: "경" },
              { value: 1e20, symbol: "자" }
            ];
            const rx = /\.0+$|(\.[0-9]*[1-9])0+$/;
            var item = lookup.slice().reverse().find(function(item) {
              return num >= item.value;
            });
            return item ? (num / item.value).toFixed(digits).replace(rx, "$1") + item.symbol : "0";
        }

